@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h2>Add Treat to Flavor</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Add Treat" class="btn btn-danger btn-lg"/>
}