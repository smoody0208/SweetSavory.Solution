@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Treat

<h3>Add a Treat:</h3>
<hr />

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br>
  @Html.LabelFor(model => model.Ingredients)
  @Html.TextBoxFor(model => model.Ingredients, new { type ="list" })
  <br>
  @Html.Label("Add Flavor to treat:")
  @Html.DropDownList("FlavorId")
  <br>
<input type="submit" value="Create Treat" class="btn btn-danger btn-lg" />
}